body
  margin 0
  padding 0

nav
  background #eee
  font-family Helvetica, sans-serif
  position absolute !important
  font-size 16px
  width 100%
  bottom 5px
  height 22px
  left 0px
  padding-left 8px
  border-top 1px solid black

.basic-tabs-item
  display block !important
  visibility: hidden
  &.active
    visibility: visible

.basic-tabs-item-title
  &:hover
    background #eee
    cursor pointer
  &.active
    background white
    border-top 1px solid white
    margin-top -1px
  background #ccc
  border 1px solid black
  border-top none
  padding 2px 10px 2px 10px
  border-radius 0 0 8px 8px

body
  height 100%

iframe
  width 100%
  height 100%
  border 0

.wrapper
  position absolute
  width 100%
  bottom 30px
  top 0
